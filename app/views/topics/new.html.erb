<% content_for :right do %>
    <div id="hide-sidebar1"></div>
<% end %>

<div class="post">
    <div class="entry">
        <h1 style="margin-top:0.5em" id="new_topic"><%= 'New Topic'[] %></h1>

        <span class="error"><%= error_messages_for :topic %></span>
        <% form_for :topic, :url  => forum_topics_path(@forum) do |f| -%>
            <%= render :partial => "form", :object => f %>
            <br>
            <%= submit_tag '  Post Topic', :or => link_to('Cancel', forum_path(@forum)) %>
        <% end -%>

        <%= javascript_tag "$('topic_title').focus();" %>

    </div>
</div>