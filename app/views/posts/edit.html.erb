<% content_for :right do %>
    <div id="hide-sidebar1"></div>
<% end %>

<div class="post">
    <div class="entry">
        <h1><%= link_to h(@post.topic.title), forum_topic_path(@post.forum, @post.topic) %></h1>

        <span class="error"><%= error_messages_for :topic %></span>

        <% form_for :post, :html => { :method => :put },
                :url  => forum_topic_post_path(@post.forum, @post.topic, @post, :page => current_page) do |f| -%>
            <p id="post_body"><%= f.text_area :body, :rows => 5, :cols => 90 %></p>
            <br>
            <%= submit_tag ' Save '[:save_title] %>
            or <%= link_to('Destroy post'[], forum_topic_post_path(@post.forum, @post.topic, @post, :page => current_page),
            :class => "utility", :method => :delete, :confirm => 'Delete this post forever?'[:delete_post_conf]) %>

        <% end -%>
    </div>
</div>