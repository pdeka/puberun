<% content_for :right do %>
    <div id="hide-sidebar1"></div>
<% end %>

<h1>Editing note</h1>

<span class="error"><%= error_messages_for :note %></span>

<% form_for(@note) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title, :size => 80%>
  </p>
  <p>
    <b>Position</b><br />
    <%= f.text_field :position, :size => 5 %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :cols => 80, :rows => 40 %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @note %> |
<%= link_to 'Back', notes_path %>
