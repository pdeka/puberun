<h1>New note</h1>

<span class="error"><%= error_messages_for :note %></span>

<% form_for(@note) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <b>Position</b><br />
    <%= f.text_field :position, :size => 5 %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', notes_path %>
